<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/avatarProfile"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="@+id/textMessage"
        android:background="@drawable/background_chat_input"
        app:layout_constraintEnd_toEndOf="parent">

    </androidx.appcompat.widget.AppCompatImageView>

    <TextView
        android:id="@+id/textMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:padding="10dp"
        android:maxWidth="500dp"
        android:text="this is a text message sent as a test"
        android:textSize="18dp"
        app:layout_constraintEnd_toStartOf="@+id/avatarProfile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5"
        android:background="@drawable/background_message_sent">
    </TextView>
    <TextView
        android:id="@+id/usernameMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginRight="5dp"
        android:text="Manuel"
        android:textSize="13dp"
        app:layout_constraintEnd_toStartOf="@id/separator"
        app:layout_constraintTop_toBottomOf="@id/textMessage"></TextView>
    <TextView
        android:id="@+id/separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginRight="5dp"
        android:text="-"
        android:textSize="13dp"
        app:layout_constraintEnd_toStartOf="@id/textDateTime"
        app:layout_constraintTop_toBottomOf="@id/textMessage"></TextView>
    <TextView
        android:id="@+id/textDateTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="00|00|00"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="@id/textMessage"
        app:layout_constraintTop_toBottomOf="@id/textMessage">

    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>
