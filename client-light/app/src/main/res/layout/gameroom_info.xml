<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="5dp"
    android:layout_gravity="center|center_vertical"
    card_view:cardBackgroundColor="?colorPrimaryVariant"
    card_view:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="6dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:divider="@drawable/letters_hand_divider"
                android:showDividers="middle"
                android:layout_alignParentStart="true"
                >
                <TextView
                    android:id="@+id/gameRoomName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="room name"
                    android:textStyle="bold"
                    android:fontFeatureSettings="smcp"
                    android:textSize="16dp">
                </TextView>
                <TextView
                    android:id="@+id/roomVisibility"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="visibility"
                    android:textStyle="bold"
                    android:fontFeatureSettings="smcp"
                    android:textSize="16dp">
                </TextView>
            </LinearLayout>
            <TextView
                android:id="@+id/roomStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="room status"
                android:textStyle="bold"
                android:fontFeatureSettings="smcp"
                android:layout_alignParentEnd="true"
                android:textSize="16dp">
            </TextView>
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/background_chat_input">
        </ImageView>
        <LinearLayout
            android:id="@+id/roomPlayersNames"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:padding="10dp"
            android:showDividers="middle"
            android:divider="@drawable/letters_hand_divider"
            android:orientation="vertical">
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
