<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?backgroundColor"
    android:clipToPadding="false"
    android:clipChildren="false"
    tools:context=".QueueFragment">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="12dp"
        android:background="@drawable/background_side_panel"
        android:backgroundTint="?colorSecondary"
        android:layout_gravity="center|end">

        <ImageButton
            android:id="@+id/buttonfriends"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_groups"
            android:layout_gravity="center_vertical" />

        <ImageButton
            android:id="@+id/buttonchat"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_chat"
            android:layout_gravity="center_vertical" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFeatureSettings="smcp"
            android:textStyle="bold"
            android:layout_marginBottom="100dp"
            android:text="@string/queueMessage"
            android:textSize="25sp" />
        <ProgressBar
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="95dp"
            android:layout_gravity="center"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/annulerBtn"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:textAllCaps="false"
            android:text="@string/annuler"
            android:textColor="?colorOnPrimary"
            android:background="@drawable/background_chat_input"
            android:backgroundTint="?buttonColor"
            android:layout_gravity="center"
            android:textSize="18dp"/>
    </LinearLayout>


</FrameLayout>
