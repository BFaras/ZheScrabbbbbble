<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    android:id="@+id/letterTileBg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:background="@color/black"
    card_view:cardCornerRadius="5dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/letterTile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/background_letter_tile"
            />
        <TextView
            android:id="@+id/letter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/letterTile"
            android:layout_alignTop="@+id/letterTile"
            android:layout_alignRight="@+id/letterTile"
            android:layout_alignBottom="@+id/letterTile"
            android:layout_margin="1dp"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/letterPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/letterTile"
            android:layout_alignTop="@+id/letter"
            android:layout_alignRight="@+id/letterTile"
            android:layout_alignBottom="@+id/letterTile"
            android:layout_marginEnd="4dp"
            android:gravity="right|bottom"
            android:textSize="12dp"
            android:textColor="#000000" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>


