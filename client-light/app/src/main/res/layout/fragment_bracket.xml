<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?backgroundColor"
    android:clipChildren="false"
    android:clipToPadding="false"
    tools:context=".BracketFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="12dp"
        android:background="@drawable/background_side_panel"
        android:backgroundTint="?appBar"
        android:layout_gravity="center|end">

        <ImageButton
            android:id="@+id/buttonfriends"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_groups"
            android:layout_gravity="center_vertical" />

        <ImageButton
            android:id="@+id/buttonchat"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_chat"
            android:layout_gravity="center_vertical" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="2000dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="5dp"
        android:padding="15dp"
        android:layout_gravity="center|top"
        android:gravity="center"
        android:background="@drawable/background_direction_panel"
        android:backgroundTint="?colorSecondary"
        android:layout_marginTop="80dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top">
            <TextView
                android:id="@+id/timeMinutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="00"
                android:textColor="?colorPrimary"
                android:textSize="35sp" />
            <TextView
                android:id="@+id/timeSeconds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="00"
                android:textColor="?colorOnSecondary"
                android:textSize="35sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="@string/till_next_round"
            android:textColor="?colorOnSecondary"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clipToPadding="false"
        android:showDividers="middle"
        android:layout_marginTop="40dp"
        android:clipChildren="false"
        android:divider="@drawable/letters_hand_divider"
        android:layout_gravity="center">
        <LinearLayout
            android:id="@+id/semis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:showDividers="middle"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:divider="@drawable/letters_hand_divider"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/Semi1"
                android:layout_width="250dp"
                android:elevation="5dp"
                android:clipToPadding="false"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/background_direction_panel"
                android:backgroundTint="?buttonColor">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- semi 1 -"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textSize="25dp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/playerSemi1"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginEnd="15dp"
                            app:srcCompat="@drawable/robot"
                            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                            android:padding="3dp">

                        </com.google.android.material.imageview.ShapeableImageView>

                        <TextView
                            android:id="@+id/semi1player1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PLAYER"
                            android:textSize="18dp"></TextView>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="vs"
                        android:textStyle="bold"
                        android:textSize="25dp"></TextView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/player2Semi1"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginEnd="15dp"
                            app:srcCompat="@drawable/robot"
                            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                            android:padding="3dp">

                        </com.google.android.material.imageview.ShapeableImageView>
                        <TextView
                            android:id="@+id/semi1player2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PLAYER"
                            android:textSize="18dp"></TextView>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/Semi2"
                android:layout_width="250dp"
                android:elevation="5dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10dp"
                android:background="@drawable/background_direction_panel"
                android:backgroundTint="?buttonColor">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- semi 2 -"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textSize="25dp"></TextView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/player1Semi2"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginEnd="15dp"
                            app:srcCompat="@drawable/robot"
                            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                            android:padding="3dp">

                        </com.google.android.material.imageview.ShapeableImageView>
                        <TextView
                            android:id="@+id/semi2player1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PLAYER"
                            android:textSize="18dp"></TextView>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="vs"
                        android:fontFeatureSettings="smcp"
                        android:textStyle="bold"
                        android:textSize="25dp"></TextView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/player2Semi2"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginEnd="15dp"
                            app:srcCompat="@drawable/robot"
                            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                            android:padding="3dp">

                        </com.google.android.material.imageview.ShapeableImageView>
                        <TextView
                            android:id="@+id/semi2player2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PLAYER"
                            android:textSize="18dp"></TextView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/finals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:showDividers="middle"
            android:layout_marginStart="150dp"
            android:divider="@drawable/letters_hand_divider"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/Final1"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:elevation="5dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:padding="10dp"
                android:background="@drawable/background_direction_panel"
                android:backgroundTint="?buttonColor">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- final 1 -"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textSize="25dp"></TextView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center_vertical">
                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/player1Final1"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginEnd="15dp"
                            app:srcCompat="@drawable/robot"
                            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                            android:padding="3dp">
                        </com.google.android.material.imageview.ShapeableImageView>
                        <TextView
                            android:id="@+id/final1player1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="@string/to_be_determined"
                            android:textSize="18dp"></TextView>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="vs"
                        android:textStyle="bold"
                        android:textSize="25dp"></TextView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center_vertical">
                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/player2Final1"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginEnd="15dp"
                            app:srcCompat="@drawable/robot"
                            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                            android:padding="3dp">

                        </com.google.android.material.imageview.ShapeableImageView>
                        <TextView
                            android:id="@+id/final1player2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="@string/to_be_determined"
                            android:textSize="18dp"></TextView>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/Final2"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:elevation="5dp"
                android:gravity="center"
                android:padding="10dp"
                android:background="@drawable/background_direction_panel"
                android:backgroundTint="?buttonColor">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- final 2 -"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textSize="25dp"></TextView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center_vertical">
                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/player1Final2"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginEnd="15dp"
                            app:srcCompat="@drawable/robot"
                            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                            android:padding="3dp">

                        </com.google.android.material.imageview.ShapeableImageView>
                        <TextView
                            android:id="@+id/final2player1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="@string/to_be_determined"
                            android:textSize="18dp"></TextView>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="vs"
                        android:fontFeatureSettings="smcp"
                        android:textStyle="bold"
                        android:textSize="25dp"></TextView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center_vertical">
                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/player2Final2"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginEnd="15dp"
                            app:srcCompat="@drawable/robot"
                            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                            android:padding="3dp">

                        </com.google.android.material.imageview.ShapeableImageView>
                        <TextView
                            android:id="@+id/final2player2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="@string/to_be_determined"
                            android:textSize="18dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>





    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/quitBtn"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:text="@string/quit"
        android:background="@drawable/background_chat_input"
        android:backgroundTint="?buttonColor"
        android:textAllCaps="false"
        android:layout_marginBottom="70dp"
        android:layout_gravity="center|bottom"
        android:textSize="18sp"/>

</FrameLayout>
