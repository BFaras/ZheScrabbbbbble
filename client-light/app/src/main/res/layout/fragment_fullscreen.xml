<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="?backgroundColor"
    android:focusableInTouchMode="true"
    android:theme="@style/ThemeOverlay.TestChatBox.FullscreenContainer"
    tools:context=".GamePageFragment">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. android:background="?attr/fullscreenBackgroundColor"-->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <com.example.testchatbox.GameBoardView
            android:id="@+id/gameBoard"
            android:layout_width="680dp"
            android:layout_height="680dp"
            android:layout_gravity="top|center"
            android:layout_marginTop="30dp" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/shrikhand"
            android:text="@string/scrabbleName"
            android:textSize="45dp">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/info_panel"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textAlignment="center"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:layout_marginTop="115dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/background_letter_rack">

        </TextView>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="right"
            android:layout_marginRight="60dp"
            android:layout_marginTop="40dp"
            android:gravity="center">

            <Button
                android:id="@+id/abandonButton"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="@string/abandonner">
            </Button>

            <LinearLayout
                android:id="@+id/hintPanel"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:padding="10dp"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_direction_panel"
                android:gravity="center|top">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="?colorOnPrimary"
                    android:text="BESOIN D'AIDE?"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:textAlignment="center"
                    android:textStyle="italic"
                    android:textColor="?colorOnPrimary"
                    android:text="Voici quelques indices pour vous aider. " />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:textSize="8dp"
                    android:textAlignment="center"
                    android:textStyle="italic|bold"
                    android:textColor="?colorOnPrimary"
                    android:text="Vous pouvez cliquer sur n'importe lequel pour le prÃ©visualiser sur le plateau."></TextView>
                <GridLayout
                    android:id="@+id/hint_holder"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:rowCount="2"
                    android:orientation="vertical">
                </GridLayout>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_direction_panel"
                    android:backgroundTint="?colorBackgroundFloating">
                    <TextView
                        android:id="@+id/displayedHint"
                        android:layout_width="match_parent"
                        android:padding="6dp"
                        android:textSize="10dp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:text="PAS BESOIN D'INDICES"
                        android:layout_height="wrap_content"
                        android:justificationMode="inter_word" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/jokerDetected"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_direction_panel"
                android:visibility="gone"
                android:gravity="center|top">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="?colorOnPrimary"
                    android:text="@string/detectedJoker"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textAlignment="center"
                    android:textStyle="italic"
                    android:textColor="?colorOnPrimary"
                    android:text="@string/blankLetterOnBoard"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="8dp"
                    android:textAlignment="center"
                    android:textStyle="italic|bold"
                    android:textColor="?colorOnPrimary"
                    android:text="@string/blankLetterWarning"></TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal|center"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/replaceLetterInput"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:background="@drawable/background_chat_input"
                        android:backgroundTint="?colorBackgroundFloating"
                        android:padding="5dp"
                        android:textSize="10sp"
                        android:imeOptions="actionSend"
                        android:inputType=""
                        android:gravity="center"
                        android:hint="@string/ReplaceLetter"
                        android:textColorHint="?colorPrimaryVariant"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:maxLength="1" />
                    <FrameLayout
                        android:id="@+id/confirmLetter"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginStart="5dp"
                        android:layout_gravity="center_horizontal|center"
                        android:background="@drawable/background_chat_input"
                        android:backgroundTint="?colorPrimaryVariant">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_rightarrow"
                            android:tint="?colorOnPrimary" />
                    </FrameLayout>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollMoveInfo"
            android:background="@drawable/background_direction_panel"
            android:layout_width="250dp"
            android:padding="10dp"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="168dp"
            android:layout_marginRight="25dp"
            android:layout_height="140dp">
            <LinearLayout
                android:id="@+id/moveInfoPanel"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:scrollbars="vertical"
                android:orientation="vertical">
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:background="@drawable/background_side_panel"
            android:backgroundTint="?colorSecondary"
            android:layout_gravity="center|end">
            <ImageButton
                android:id="@+id/buttonchat"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_chat"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="480dp"
            android:layout_width="280dp"
            android:background="@drawable/background_player_panel"
            android:layout_gravity="left|center"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:paddingTop="30dp">

            <LinearLayout
                android:id="@+id/playersInfoHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp">
            <TextView
                android:id="@+id/timesup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/times_up"
                android:visibility="gone"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center">
            </TextView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >
                <TextView
                    android:id="@+id/minutesTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="00"
                    android:textSize="40dp"
                    android:textColor="?colorOnPrimary"
                    android:layout_gravity="center|bottom">
                </TextView>
                <TextView
                    android:id="@+id/secondsTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:textSize="40dp"
                    android:layout_gravity="center|bottom">
                </TextView>
            </LinearLayout>

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@string/tillNextRound"
                android:textColor="?colorOnPrimary"
                android:layout_gravity="center|bottom">
            </TextView>

        </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/reserveLength"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:textStyle="bold"
                    android:layout_gravity="center|bottom"
                    android:textSize="25dp"
                    android:textAlignment="center"
                    >
                </TextView>
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="@string/reserveText"
                    android:textColor="?colorOnPrimary"
                    android:layout_gravity="center|bottom">
                </TextView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/letterRack"
            android:layout_width="600dp"
            android:layout_height="75dp"
            android:background="@drawable/background_letter_rack"
            android:layout_gravity="center|bottom"
            android:padding="5dp"
            android:gravity="center"
            android:showDividers="middle"
            android:divider="@drawable/letters_hand_divider"
            android:orientation="horizontal">

        </LinearLayout>

        <Button
            android:id="@+id/buttonPass"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:drawableTop="@drawable/ic_pass"
            android:gravity="center_horizontal"
            android:text="@string/pass"
            android:textSize="10sp"
            android:singleLine="true"
            android:background="@drawable/background_letter_rack"
            android:layout_gravity="center|bottom"
            android:layout_marginLeft="500dp"
            >
        </Button>

        <Button
            android:id="@+id/buttonPlay"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:drawableTop="@drawable/ic_play"
            android:text="@string/play"
            android:enabled="false"
            android:textSize="10sp"
            android:singleLine="true"
            android:background="@drawable/background_letter_rack"
            android:layout_gravity="center|bottom"
            android:layout_marginLeft="380dp"
            >
        </Button>

        <ImageButton
            android:id="@+id/backInHand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_player_panel"
            android:layout_gravity="center|right"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="12dp"
            android:visibility="gone"
            android:src="@drawable/ic_hand"
            android:layout_marginTop="275dp"
            android:layout_marginRight="240dp">

        </ImageButton>

        <Button
            android:id="@+id/buttonHint"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_gravity="left|bottom"
            android:layout_marginLeft="90dp"
            android:background="@drawable/background_letter_rack"
            android:drawableTop="@drawable/ic_hint"
            android:text="Indice"
            android:textSize="10sp" />

        <Button
            android:id="@+id/buttonExchange"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:enabled="false"
            android:layout_gravity="center|bottom"
            android:layout_marginRight="380dp"
            android:background="@drawable/background_letter_rack"
            android:drawableTop="@drawable/ic_swap"
            android:text="@string/swap"
            android:textSize="10sp" />

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:orientation="vertical"
            tools:ignore="UselessParent">
        </LinearLayout>

    </FrameLayout>

</FrameLayout>
