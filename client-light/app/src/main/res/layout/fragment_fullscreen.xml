<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:background="?backgroundColor"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:focusableInTouchMode="true"
    android:theme="@style/ThemeOverlay.TestChatBox.FullscreenContainer"
    tools:context=".GamePageFragment">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. android:background="?attr/fullscreenBackgroundColor"-->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <com.example.testchatbox.GameBoardView
            android:id="@+id/gameBoard"
            android:layout_width="680dp"
            android:layout_height="680dp"
            android:layout_gravity="top|center"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/shrikhand"
            android:text="@string/scrabbleName"
            android:textSize="55dp">
        </TextView>



        <androidx.cardview.widget.CardView
            android:id="@+id/gameWinnerHolder"
            android:layout_width="450dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="?colorSecondary"
            android:background="@drawable/background_direction_panel"
            android:layout_gravity="center|top"
            android:layout_marginTop="160dp"
            android:visibility="gone"
            android:gravity="center">
            <TextView
                android:id="@+id/gameWinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="25dp"
                android:layout_gravity="center"
                android:fontFeatureSettings="smcp"
                android:textAlignment="center"
                android:textColor="?colorOnSecondary"
                android:text="@string/winnerName"></TextView>
        </androidx.cardview.widget.CardView>



        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:padding="5dp"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/abandonButton"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:clipToPadding="false"
                android:textAllCaps="false"
                android:background="@drawable/background_direction_panel"
                android:backgroundTint="?appBar"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="@string/abandonner">
            </androidx.appcompat.widget.AppCompatButton>

            <LinearLayout
                android:id="@+id/observedHolder"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginTop="40dp">
                <LinearLayout
                    android:id="@+id/observedPlayers"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    >
                </LinearLayout>
                <TextView
                    android:id="@+id/nowObservingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:text="@string/now_observing_player1"
                    ></TextView>
            </LinearLayout>

            <ProgressBar
                android:id="@+id/cluesProgress"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:visibility="gone">
            </ProgressBar>

            <LinearLayout
                android:id="@+id/hintPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="5dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:padding="10dp"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_direction_panel"
                android:backgroundTint="?inGameBoardColor"
                android:gravity="center|top">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="?colorOnPrimary"
                    android:text="@string/needHelp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textAlignment="center"
                    android:textStyle="italic"
                    android:textColor="?colorOnPrimary"
                    android:text="@string/voici_quelques_indices_pour_vous_aider" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:textSize="12dp"
                    android:textAlignment="center"
                    android:textStyle="italic|bold"
                    android:textColor="?colorOnPrimary"
                    android:text="@string/vous_pouvez_cliquer_sur_n_importe_lequel_pour_le_pr_visualiser_sur_le_plateau"></TextView>
                <TextView
                    android:id="@+id/noHintFound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="10dp"
                    android:textSize="14dp"
                    android:textAlignment="center"
                    android:textStyle="italic|bold"
                    android:textColor="?colorOnPrimary"
                    android:text="@string/sorry_nno_hints_have_been_found"></TextView>

                    <LinearLayout
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <GridLayout
                            android:id="@+id/hint_holder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:columnCount="2"
                            android:rowCount="3"></GridLayout>
                    </LinearLayout>
                <FrameLayout
                    android:id="@+id/noHelpHint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/background_direction_panel"
                    android:backgroundTint="?colorSecondary">
                    <TextView
                        android:id="@+id/displayedHint"
                        android:layout_width="match_parent"
                        android:padding="6dp"
                        android:textSize="12dp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="?colorOnSecondary"
                        android:text="@string/pas_besoin_d_indices"
                        android:textAllCaps="true"
                        android:layout_height="wrap_content"
                        android:justificationMode="inter_word" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/jokerDetected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:elevation="5dp"
                android:layout_gravity="center"
                android:paddingTop="20dp"
                android:paddingRight="6dp"
                android:paddingLeft="6dp"
                android:paddingBottom="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_direction_panel"
                android:backgroundTint="?inGameBoardColor"
                android:visibility="gone"
                android:gravity="center|top">
                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:textSize="22dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="?colorOnPrimary"
                    android:text="@string/detectedJoker"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textAlignment="center"
                    android:textStyle="italic"
                    android:textColor="?colorOnPrimary"
                    android:text="@string/blankLetterOnBoard"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:textAlignment="center"
                    android:textStyle="italic|bold"
                    android:textColor="?colorOnPrimary"
                    android:text="@string/blankLetterWarning"></TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"

                    android:gravity="center_horizontal|center"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/replaceLetterInput"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/background_chat_input"
                        android:backgroundTint="?editBackgroundColor"
                        android:padding="5dp"
                        android:textSize="15sp"
                        android:imeOptions="actionSend"
                        android:inputType=""
                        android:gravity="center"
                        android:hint="@string/ReplaceLetter"
                        android:textColorHint="?colorOnSecondary"
                        android:textColor="?colorOnSecondary"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:maxLength="1" />
                    <FrameLayout
                        android:id="@+id/confirmLetter"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="5dp"
                        android:layout_gravity="center_horizontal|center"
                        android:background="@drawable/background_chat_input"
                        android:backgroundTint="?colorPrimaryVariant">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_rightarrow"
                            android:tint="?colorOnPrimary" />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/coopHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:elevation="5dp"
                android:clipToPadding="false"
                android:clipChildren="false"
                android:layout_gravity="center"
                android:paddingTop="20dp"
                android:paddingRight="6dp"
                android:paddingLeft="6dp"
                android:paddingBottom="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_direction_panel"
                android:backgroundTint="?inGameBoardColor"
                android:visibility="gone"
                android:gravity="center|top">
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="22dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="?colorOnPrimary"
                    android:text="@string/an_action_has_been_proposed"></TextView>
                <TextView
                    android:id="@+id/proposedAction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"
                    android:textStyle="italic"
                    android:textColor="?colorOnPrimary"></TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal|center"
                    android:orientation="vertical">
                   <androidx.appcompat.widget.AppCompatButton
                       android:id="@+id/acceptAction"
                       android:layout_width="200dp"
                       android:layout_height="35dp"
                       android:layout_marginBottom="10dp"
                       android:text="@string/accept"
                       android:textAllCaps="false"
                       android:textStyle="bold"
                       android:background="@drawable/background_direction_panel"
                       android:backgroundTint="?buttonColor">

                   </androidx.appcompat.widget.AppCompatButton>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/refuseAction"
                        android:layout_width="200dp"
                        android:layout_height="35dp"
                        android:text="@string/refuse"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:background="@drawable/background_direction_panel"
                        android:backgroundTint="?buttonColor">

                    </androidx.appcompat.widget.AppCompatButton>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/teamApproval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:elevation="5dp"
                android:layout_gravity="center"
                android:paddingTop="20dp"
                android:paddingRight="6dp"
                android:paddingLeft="6dp"
                android:paddingBottom="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_direction_panel"
                android:backgroundTint="?inGameBoardColor"
                android:visibility="gone"
                android:gravity="center|top">
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="22dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="?colorOnPrimary"
                    android:textAllCaps="true"
                    android:text="waiting for the team approval"></TextView>
                <ProgressBar
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"></ProgressBar>
            </LinearLayout>


        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollMoveInfo"
            android:elevation="5dp"
            android:background="@drawable/background_direction_panel"
            android:backgroundTint="?inGameBoardColor"
            android:layout_width="260dp"
            android:padding="10dp"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="110dp"
            android:layout_marginRight="20dp"
            android:layout_height="245dp">
            <LinearLayout
                android:id="@+id/moveInfoPanel"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:scrollbars="vertical"
                android:orientation="vertical">
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:elevation="8dp"
            android:gravity="center"
            android:padding="8dp"
            android:background="@drawable/background_side_panel"
            android:backgroundTint="?appBar"
            android:layout_gravity="center|end">
            <ImageButton
                android:id="@+id/friends"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_groups"
                android:layout_gravity="center_vertical" />
            <ImageButton
                android:id="@+id/buttonchat"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_chat"
                android:layout_gravity="center_vertical" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:paddingBottom="10dp"
            android:layout_gravity="center|left">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/info_panel"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textAlignment="center"
                android:paddingLeft="10dp"
                android:elevation="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/background_letter_rack"
                android:backgroundTint="?inGameBoardColor">

            </TextView>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="280dp"
                android:elevation="5dp"
                android:background="@drawable/background_player_panel"
                android:backgroundTint="?inGameBoardColor"
                android:layout_gravity="left|center"
                android:orientation="vertical"
                android:layout_marginBottom="10dp"
                android:paddingTop="10dp">
                <LinearLayout
                    android:id="@+id/playersInfoHolder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/timerHolder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:visibility="visible"
                    android:layout_marginBottom="15dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        >
                        <TextView
                            android:id="@+id/minutesTimer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="00"
                            android:textSize="40dp"
                            android:textColor="?colorOnPrimary"
                            android:layout_gravity="center|bottom">
                        </TextView>
                        <TextView
                            android:id="@+id/secondsTimer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00"
                            android:textSize="40dp"
                            android:layout_gravity="center|bottom">
                        </TextView>
                    </LinearLayout>

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="@string/tillNextRound"
                        android:textColor="?colorOnPrimary"
                        android:layout_gravity="center|bottom">
                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/reserveLength"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:textStyle="bold"
                        android:layout_gravity="center|bottom"
                        android:textSize="25dp"
                        android:textAlignment="center"
                        >
                    </TextView>
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="@string/reserveText"
                        android:textColor="?colorOnPrimary"
                        android:layout_gravity="center|bottom">
                    </TextView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:id="@+id/emoteNice"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:padding="5dp"
                            android:background="@drawable/background_chat_input"
                            android:layout_marginEnd="20dp"
                            android:backgroundTint="?colorSecondary">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/hmm">
                            </androidx.appcompat.widget.AppCompatImageView>
                        </FrameLayout>
                        <FrameLayout
                            android:id="@+id/emoteCringe"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginEnd="20dp"
                            android:padding="5dp"
                            android:background="@drawable/background_chat_input"
                            android:backgroundTint="?colorSecondary">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/cringe">
                            </androidx.appcompat.widget.AppCompatImageView>
                        </FrameLayout>
                        <FrameLayout
                            android:id="@+id/emoteWat"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:padding="8dp"
                            android:background="@drawable/background_chat_input"
                            android:backgroundTint="?colorSecondary">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/wat">
                            </androidx.appcompat.widget.AppCompatImageView>
                        </FrameLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/toggle_swap_holder"
                android:layout_height="wrap_content"
                android:layout_width="280dp"
                android:elevation="5dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:layout_gravity="left|bottom"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingBottom="4dp"
                android:gravity="center_vertical"
                android:divider="@drawable/letters_hand_divider"
                android:showDividers="middle"
                android:background="@drawable/background_player_panel"
                android:backgroundTint="?inGameBoardColor">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/move_mode"
                    android:textSize="13dp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:fontFeatureSettings="smcp"></TextView>
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/toggleSwap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|bottom"
                    android:fontFeatureSettings="smcp">
                </com.google.android.material.switchmaterial.SwitchMaterial>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/swap_mode"
                    android:textAllCaps="true"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:fontFeatureSettings="smcp"></TextView>
            </LinearLayout>
        </LinearLayout>






        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="top|left"
            android:layout_marginStart="250dp"
            android:layout_marginTop="100dp"
            android:gravity="center">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/emotePlayer1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:visibility="invisible">
            </com.google.android.material.imageview.ShapeableImageView>
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/emotePlayer2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:visibility="invisible">
            </com.google.android.material.imageview.ShapeableImageView>
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/emotePlayer3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:visibility="invisible">
            </com.google.android.material.imageview.ShapeableImageView>
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/emotePlayer4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop">
            </com.google.android.material.imageview.ShapeableImageView>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="600dp"
            android:layout_height="93dp"
            android:elevation="5dp"
            android:background="@drawable/background_letter_rack"
            android:backgroundTint="?inGameBoardColor"
            android:layout_gravity="center|bottom"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/letterRack"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="90dp"
                android:layout_marginEnd="90dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:showDividers="middle"
                android:divider="@drawable/letters_hand_divider"
                android:orientation="horizontal"
                >
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/backInHand"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:visibility="gone"
                android:background="@drawable/ic_hand"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:backgroundTint="?colorOnPrimary">

            </androidx.appcompat.widget.AppCompatButton>

        </RelativeLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonPass"
            style="@style/MaterialButtonStyleInGame"
            android:layout_width="wrap_content"
            android:layout_height="93dp"
            android:drawableTop="@drawable/ic_pass"
            android:paddingTop="-10dp"
