<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TestChatBox" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="android:windowBackground">@color/beige</item>
        <item name="colorPrimary">@color/corail</item>
        <item name="colorPrimaryVariant">@color/darkCorail</item>
        <item name="android:textColor">@color/darkForestGreen</item>
        <item name="colorOnPrimary">@color/lightBeige</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="pinkTile">@color/lightCorail</item>
        <item name="blueTile">@color/forestGreen</item>
        <item name="lightBlueTile">@color/lightForest</item>
        <item name="lettersOnBoard">@color/NavajoWhite</item>
    </style>
    <style name="Theme.TestChatBox.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.TestChatBox.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.TestChatBox.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ThemeOverlay.TestChatBox.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>
